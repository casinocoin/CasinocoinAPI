<?xml version="1.0" encoding="UTF-8"?>
<sequence name="validateBTCAddress" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
  <payloadFactory description="ValidateAddress" media-type="json">
    <format>{"jsonrpc": "1.0", "id": "wso2rpc", "method": "validateaddress", "params": ["$1"]}</format>
    <args>
      <arg evaluator="xml" expression="$ctx:BTCAddress"/>
    </args>
  </payloadFactory>
  <property
    expression="fn:concat(get-property('BTC-RPC-USER'),':',get-property('BTC-RPC-PW'))"
    name="BtcRpcUserPass" scope="default" type="STRING"/>
  <property
    expression="fn:concat('Basic ', base64Encode(get-property('BtcRpcUserPass')))"
    name="Authorization" scope="transport" type="STRING"/>
  <property name="DISABLE_CHUNKING" scope="axis2" type="STRING" value="true"/>
  <property description="messageType" name="messageType" scope="axis2"
    type="STRING" value="application/json"/>
  <call description="">
    <endpoint key="BTC-RPC-Endpoint"/>
  </call>
  <property expression="json-eval($.result.isvalid)"
    name="BTCValidAddress" scope="default" type="STRING"/>
</sequence>
